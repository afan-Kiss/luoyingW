<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74.5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        style="@style/viewline_height1dp"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="58.5dp"
        android:layout_marginLeft="58.5dp"
        android:background="@color/gray_E2E5E7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_header"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textview_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/textview_name"
                    android:layout_toRightOf="@+id/textview_name"
                    android:gravity="end"
                    android:lines="1"
                    android:textColor="@color/gray_888888"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/gray_888888"
                    android:textSize="12sp" />


            </RelativeLayout>

            <TextView
                android:id="@+id/textview_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>