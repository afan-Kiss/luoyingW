<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/add_friend_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/add_friend_head_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/add_group" />

        <TextView
            android:id="@+id/add_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/add_friend_head_iv"
            android:text="阿柴"
            android:textColor="#ff333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/friend_Verify_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_friend_name"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/add_friend_head_iv"
            android:text="我是啊啊啊"
            android:textColor="#ff888888"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/add_friend_agree"
            android:layout_width="57dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/add_friend_rc_button"
            android:gravity="center"
            android:text="添加"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <View
            style="@style/viewline_height1dp"
            android:layout_height="0.5dp"
            android:layout_below="@+id/friend_Verify_friends"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"

            />

    </RelativeLayout>

</RelativeLayout>