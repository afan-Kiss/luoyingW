<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:background="@drawable/ceshi">

        <ImageView
            android:id="@+id/iv_dynamic_add"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"
            android:layout_marginTop="33dp"
            android:scaleType="fitXY"
            android:src="@drawable/add"
            android:visibility="gone"/>

        <com.shehuan.niv.NiceImageView
            android:id="@+id/iv_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7.5dp"
            android:layout_marginLeft="15.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/head_touxiang"
            app:corner_radius="5dp"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="23dp"
            android:layout_toRightOf="@+id/iv_avatar"
            android:text="阿柴每天都超级无敌开心哈哈哈..."
            android:textSize="17sp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_dynamic_message"
        android:layout_width="199.5dp"
        android:layout_height="40dp"
        android:layout_below="@+id/head_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/dynamic_message"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="21.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/head_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:text="1条消息"
                android:textColor="#444444"
                android:textSize="14sp"/>

            <com.shehuan.niv.NiceImageView
                android:id="@+id/iv_dynamic_message"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="28.5dp"
                android:src="@drawable/right"
                app:corner_radius="5dp"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
