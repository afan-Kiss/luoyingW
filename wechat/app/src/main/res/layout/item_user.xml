<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="63dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:id="@+id/relativelayout_root">

    <ImageView
        android:id="@+id/imageview_header"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12.5dp"
        android:layout_marginRight="12.5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_toEndOf="@id/imageview_header"
            android:layout_toRightOf="@id/imageview_header">

            <TextView
                android:id="@+id/textview_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_333333"
                android:textSize="17sp"
                android:lines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/textview_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/gray_888888"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/view_line"
            style="@style/viewline_height1dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_E2E5E7"
            android:layout_toEndOf="@id/imageview_header"
            android:layout_toRightOf="@id/imageview_header"
            android:layout_marginLeft="2dp" />



</RelativeLayout>