<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine_chenmo.activity.QrcodeActivity">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightIcon="@mipmap/icon_mine_saoma"
        app:title="二维码" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:paddingBottom="24dp">


        <RelativeLayout
            android:id="@+id/rl_qrcode_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/apptheme">

            <ImageView
                android:id="@+id/img_qrcode"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_margin="50dp" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/img_head_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/rl_qrcode_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-24dp" />

        <TextView
            android:id="@+id/tv_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_head_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="看看就好发货好几个就就大幅是的度"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智利"
                android:textColor="#666666"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/sex_girl" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="扫一扫上面的二维码图案，加我微信"
        android:textColor="#666666"
        android:textSize="12dp" />

</LinearLayout>